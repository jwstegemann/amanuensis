        "store": "no",
        "analyzer": "german"
      },
      "content": {
        "type": "string",
        "store": "no",
        "analyzer": "german"
      }
      "created": {
        "type": "date",
        "format": "date_time",
        "store": "no",
        "index": "analyzed"
      }
      "createdBy": {
        "type": "string",
        "store": "no",
        "index": "no"
      }

    }
  }
}'